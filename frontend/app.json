{
	"expo": {
		"name": "frontend",
		"slug": "frontend",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "frontend",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"infoPlist": {
				"NSHealthShareUsageDescription": "歩数や消費カロリーなどのヘルスデータを読み取り、運動可視化に利用します。",
				"NSHealthUpdateUsageDescription": "歩数や消費カロリーなどのヘルスデータを更新します。",
				"NSLocalNetworkUsageDescription": "近くの端末を検出して接続するためにローカルネットワークを使用します。",
				"ITSAppUsesNonExemptEncryption": false
			},
			"bundleIdentifier": "app.kobayashi.aopon.HealthGame",
			"supportsTablet": true
		},
		"android": {
			"adaptiveIcon": {
				"backgroundColor": "#E6F4FE",
				"foregroundImage": "./assets/images/android-icon-foreground.png",
				"backgroundImage": "./assets/images/android-icon-background.png",
				"monochromeImage": "./assets/images/android-icon-monochrome.png"
			},
			"edgeToEdgeEnabled": true,
			"predictiveBackGestureEnabled": false,
			"permissions": [
				"android.permission.ACTIVITY_RECOGNITION",
				"android.permission.ACCESS_FINE_LOCATION",
				"android.permission.BLUETOOTH_SCAN",
				"android.permission.BLUETOOTH_CONNECT",
				"android.permission.BLUETOOTH_ADVERTISE",
				"android.permission.NEARBY_WIFI_DEVICES"
			],
			"package": "app.kobayashi.aopon.HealthGame"
		},
		"web": {
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/icon.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#ffffff",
					"dark": {
						"backgroundColor": "#000000"
					}
				}
			],
			"expo-secure-store",
			"./plugins/with-healthkit",
			[
				"expo-nearby-connections",
				{
					"bonjourServicesName": "aopon-chat",
					"localNetworkUsagePermissionText": "近くの端末を見つけてデータを交換するためにローカルネットワークを使用します。"
				}
			]
		],
		"experiments": {
			"typedRoutes": true,
			"reactCompiler": true
		},
		"extra": {
			"router": {},
			"eas": {
				"projectId": "77926d79-4a73-4010-8bf1-b3ed1b3e0d29"
			}
		}
	}
}
