{
    "expo": {
        "name": "frontend",
        "slug": "frontend",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "frontend",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "infoPlist": {
                "NSHealthShareUsageDescription": "歩数や消費カロリーなどのヘルスデータを読み取り、運動可視化に利用します。",
                "NSHealthUpdateUsageDescription": "歩数や消費カロリーなどのヘルスデータを更新します。",
                "ITSAppUsesNonExemptEncryption": false
            },
            "bundleIdentifier": "app.kobayashi.aopon.HealthGame",
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#E6F4FE",
                "foregroundImage": "./assets/images/android-icon-foreground.png",
                "backgroundImage": "./assets/images/android-icon-background.png",
                "monochromeImage": "./assets/images/android-icon-monochrome.png"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "permissions": [
                "android.permission.ACTIVITY_RECOGNITION",
                "android.permission.ACCESS_FINE_LOCATION"
            ],
            "package": "app.kobayashi.aopon.HealthGame"
        },
        "web": {
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff",
                    "dark": {
                        "backgroundColor": "#000000"
                    }
                }
            ],
            "expo-secure-store",
            [
                "expo-build-properties",
                {
                    "ios": {
                        "developmentTarget": "17.7"
                    }
                }
            ],
            "./plugins/with-healthkit",
            "expo-health-connect",
            [
                "expo-health-connect",
                ["expo-build-properties", { "android": { "minSdkVersion": 26 } }]
            ]
        ],
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "77926d79-4a73-4010-8bf1-b3ed1b3e0d29"
            }
        }
    }
}
