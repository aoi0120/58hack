generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  password     String
  name         String
  age          Int
  stepRecords  StepRecord[]
  foundUsers   User[]   @relation("FoundUsers")
  foundByUsers User[]   @relation("FoundUsers")
  wonBattles   BattleRecord[] @relation("Winner")
  lostBattles  BattleRecord[] @relation("Loser")
}

model StepRecord {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  date DateTime
  steps Int
}

model URL {
  id   String  @id @unique
  url  String
}

model BattleRecord {
  id        Int    @id @default(autoincrement())
  date      DateTime
  winner    User   @relation("Winner", fields: [winnerId], references: [id])
  winnerId  Int
  loser     User   @relation("Loser", fields: [loserId], references: [id])
  loserId   Int
}
